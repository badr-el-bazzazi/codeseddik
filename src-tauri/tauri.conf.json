{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Code-Seddik",
  "version": "0.1.0",
  "identifier": "codeseddik",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Code Seddik",
        "fullscreen": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "linux" : {
      "deb": {
        "files": {}
      },
      "rpm" : {
        "files": {},
        "depends" : [
          "rustup",
          "libappindicator-gtk3",
          "webkit2gtk3",
          "gtk3",
          "libayatana-appindicator3",
          "glibc",
          "libX11",
          "libXcomposite",
          "libXcursor",
          "libXdamage",
          "libXrandr",
          "libXtst",
          "libgdk_pixbuf",
          "webkit2gtk4.1-devel",
          "gtk3-devel",
          "openssl-devel",
          "libappindicator-gtk3-devel",
          "gcc",
          "gcc-c++",
          "make",
          "libgcc",
          "glibc-devel",
          "libstdc++-devel",
          "curl",
          "wget",
          "pkg-config"
        ],
        "preInstallScript": "scripts/prescript.sh",
        "postInstallScript": "scripts/postscript.sh",
        "preRemoveScript": "scripts/prescript.sh",
        "postRemoveScript": "scripts/postscript.sh",
        "conflicts": ["oldLib.rpm"],
        "depends": ["newLib.rpm"],
        "obsoletes": ["veryoldLib.rpm"],
        "provides": ["coolLib.rpm"],
        "desktopTemplate": "desktop-template.desktop"
      }
    }
  }
}
